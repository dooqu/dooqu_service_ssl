            "command": "g++",
            "args": [
                "-g",
                "-fPIC",
                "-Wall",
                "-fpermissive",
                "-std=c++11",
                "-c",
                "-I/usr/local/ssl/include",
                "${workspaceFolder}/src/net/*.cpp",
                "${workspaceFolder}/src/util/*.cpp",
                "${workspaceFolder}/src/service/*.cpp"
