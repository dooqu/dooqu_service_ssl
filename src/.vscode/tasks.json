{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile dooqu_service_ssl o file",
            "type": "shell",
            "command": "g++",
            "args": [
                // Ask msbuild to generate full paths for file names.
                //"/property:GenerateFullPaths=true",
                //"/t:build"
                "-g",
                "-fPIC",
                "-Wall",
                "-fpermissive",
                "-std=c++11",
                "-c",
                "net/*.cpp",
                "util/*.cpp",
                "service/*.cpp",              
                
                "-l:libboost_system.a",
                "-l:libcrypto.a",
                "-l:libssl.a",
                "-pthread",
                "-ldl",
                "/usr/local/lib/libcrypto.a",
                "/usr/local/lib/libssl.a",
                "-o ${workspaceRoot}/../bin/Debug/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true 
            },

            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build dooqu_servcie_ssl.a",
            "type": "shell",
            "command": "ar",
            "args": [               
                    "-r",
                    "-s" ,
                    "${workspaceRoot}/../bin/Debug/libdooqu_service_ssl.a",
                    "tcp_server.o"  
            ],
            "group": {
                "kind": "build",
                "isDefault": true 
            },

            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        }
    ]
}